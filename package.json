{
  "name": "ng-portfolio",
  "version": "1.0.0",
  "description": "Portfolio Site for Nicholas Green",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "build:css": "concurrently \"cd client\" \"postcss src/styles/index.css -o src/index.css\"",
    "watch:css": "concurrently \"cd client\" \"postcss src/styles/index.css -o src/index.css -w\"",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run watch:css\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^9.7.0",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "mocha": "^6.2.0",
    "mongoose": "^5.6.11",
    "morgan": "^1.9.1",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2",
    "postcss-preset-env": "^6.7.0"
  }
}
